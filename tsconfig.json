{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"allowJs": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client"],
		"baseUrl": "src",
		"paths": {
			"components/*": ["components/*"],
			"composables/*": ["composables/*"],
			"layouts/*": ["layouts/*"],
			"lib/*": ["lib/*"],
			"store/*": ["store/*"],
			"types/*": ["types/*"],
			"views/*": ["views/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/store/mutations.js",
		"src/lib/test.js"
	]
}
